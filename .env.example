# Claudius Environment Configuration
# Copy to .env and fill in values

# Required: Authentication secret (same as Docker app for consistency)
CRON_SECRET=your_secret_here

# Optional: For delegating codebase tasks to Clode
ADMIN_SECRET=your_admin_secret_here
CLODE_API_URL=http://localhost:3000/api/admin/claude

# Optional: Telegram notifications
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_OWNER_CHAT_ID=7070679785

# Optional: TTS voice (fal.ai)
FAL_KEY=your_fal_key_here

# Optional: Custom Claudius directory (default: /opt/claudius)
# CLAUDIUS_DIR=/opt/claudius

# Optional: Custom voice URL
# CLAUDIUS_VOICE_URL=https://example.com/voice.mp3
